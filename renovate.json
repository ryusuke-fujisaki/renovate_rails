{
  "extends": ["config:base"],
  "baseBranches": ["main", "sub"],
  "enabledManagers": ["bundler"],
  "semanticCommitType": "fix",
  "automerge": false,
  "packageRules": [
    {
      "groupName": "Target gems",
      "managers": ["bundler"],
      "matchDepTypes": ["direct"],
      "allowedVersions": "/^\\d+\\.\\d+\\.\\d+$/",
      "enabled": true
    },
    {
      "managers": ["bundler"],
      "matchDepTypes": ["direct"],
      "matchPackagePatterns": [
        "^rails",
        "^active",
        "^ahoy_email$",
        "^sentry-rails$",
        "^geocoder$",
        "^capistrano-sidekiq$"
      ],
      "enabled": false
    },
    {
      "managers": ["bundler"],
      "matchDepTypes": ["indirect"],
      "enabled": false
    }
  ],
  "schedule": [
    "* 4 15-21 * 2"
  ],
  "timezone": "Asia/Tokyo"
}
