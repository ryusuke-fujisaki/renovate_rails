{
  "extends": ["config:base"],
  "baseBranches": ["main", "sub"],
  "enabledManagers": ["bundler"],
  "semanticCommitType": "fix",
  "automerge": false,
  "timezone": "Asia/Tokyo",
  "schedule": [
    "* * * * *"
  ],
  "packageRules": [
    {
      "groupName": "Rubyパッチアップデート",
      "managers": ["bundler"],
      "matchDepTypes": ["direct"],
      "matchUpdateTypes": ["patch"],
      "prTitle": "【パッチ更新】{{{depName}}} を {{currentVersion}} → {{newVersion}} に更新",
      "prBodyTemplate": "### 概要\n{{{depName}}} を {{currentVersion}} から {{newVersion}} に更新しました。\n\n### 変更履歴\n{{{changelog}}}\n\n### 比較\n[差分はこちら]({{{sourceUrl}}}/compare/v{{{currentVersion}}}...v{{{newVersion}}})",
      "enabled": true
    },
    {
      "managers": ["bundler"],
      "matchUpdateTypes": ["minor", "major"],
      "enabled": true
    },
    {
      "managers": ["bundler"],
      "matchDepTypes": ["indirect"],
      "enabled": false
    },
    {
      "managers": ["bundler"],
      "matchPackagePatterns": [
        "^active",
        "^ahoy_email$",
        "^sentry-rails$",
        "^geocoder$",
        "^capistrano-sidekiq$"
      ],
      "enabled": false
    }
  ]
}
