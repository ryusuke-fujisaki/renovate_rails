{
  "extends": ["config:base"],
  "enabledManagers": ["bundler"],
  "semanticCommitType": "fix",
  "automerge": false,
  "packageRules": [
    {
      "managers": ["bundler"],
      "matchDepTypes": ["direct"],
      "enabled": true
    },
    {
      "managers": ["bundler"],
      "matchDepTypes": ["indirect"],
      "enabled": false
    }
  ],
  "bundler": {
    "ignoreBundledDependencies": true
  },
  "schedule": [
    "every 1 hour"
  ],
  "timezone": "Asia/Tokyo"
}
