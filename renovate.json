{
  "extends": ["config:base"],
  "enabledManagers": ["bundler"],
  "semanticCommitType": "fix",
  "automerge": false,
  "packageRules": [
    {
      "matchManagers": ["bundler"],
      "allowedVersions": "/^\\d+\\.\\d+\\.\\d+$/"
    }
  ],
  "bundler": {
    "ignoreBundledDependencies": true
  },
  "schedule": [
    "0 * * * *"
  ],
  "timezone": "Asia/Tokyo"
}
