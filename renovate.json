{
  "extends": ["config:base"],
  "baseBranches": ["main", "sub"],
  "enabledManagers": ["bundler"],
  "semanticCommitType": "fix",
  "automerge": false,
  "timezone": "Asia/Tokyo",
  "schedule": ["after 10pm and before 1am"],
  "packageRules": [
    {
      "groupName": "Rubyパッチアップデート",
      "managers": ["bundler"],
      "matchDepTypes": ["direct"],
      "matchUpdateTypes": ["patch"]
    },
    {
      "groupName": "Rubyマイナーアップデート",
      "managers": ["bundler"],
      "matchDepTypes": ["direct"],
      "matchUpdateTypes": ["minor"]
    }
  ]
}
