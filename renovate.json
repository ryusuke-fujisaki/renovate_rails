{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": ["* 6-12 * 8 *"],
  "packageRules": [
    {
      "packageNames": ["node", "@types/node", "ruby", "cimg/ruby"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["major"],
      "matchPackageNames": ["bootstrap", "@types/bootstrap","reactstrap", "@coreui/coreui"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["patch"],
      "groupName": "Patch Ruby Gems and npm packages",
      "automerge": false
    },
    {
      "matchUpdateTypes": ["minor"],
      "groupName": "Minor Ruby Gems and npm packages",
      "excludePackageNames": ["rails"],
      "automerge": false
    },
    {
      "matchManagers": ["bundler"],
      "matchUpdateTypes": ["major"],
      "matchDepTypes": ["test", "development,test"],
      "groupName": "Major Test Ruby Gems",
      "automerge": false
    }
  ]
}
